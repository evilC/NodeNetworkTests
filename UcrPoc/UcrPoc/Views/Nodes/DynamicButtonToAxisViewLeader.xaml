<UserControl x:Class="UcrPoc.Views.Nodes.DynamicButtonToAxisViewLeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcrPoc.Views.Nodes"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Default Set Point"></Label>
                <xctk:ShortUpDown Name="DefaultSetPoint" MinWidth="75"/>
            </StackPanel>
            <Button x:Name="btnAddInput" Content="Add Input"/>
        </StackPanel>
    </Grid>
</UserControl>
